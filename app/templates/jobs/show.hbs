<PaperCard class="paper-card" as |card|>
    <card.title as |title|>
        <title.text as |text|>
            <text.headline class="headline">Analysis for: {{@model.job.file.filename}}</text.headline>
            <text.subhead class="subhead">From {{@model.job.source.name}} (source), {{moment-format @model.job.created 'LLL'}}</text.subhead>
        </title.text>

    </card.title>
    <card.content>

        {{#each @model.job.columns as |column|}}
            <PaperButton @raised={{true}} {{on "click" (fn this.selectColumn column)}} @onClick={{null}}> {{column.name}}</PaperButton>
        {{/each}}

        {{#if this.selectedColumn}}
            <ColumnCard @column={{this.selectedColumn}} @units={{@model.units}}/>
        {{/if}}
        
    </card.content>
</PaperCard>


